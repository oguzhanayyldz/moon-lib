{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"*": ["src/*"]
		},
		"composite": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/*.test.ts",
		"src/test/**/*",
		"dist"
	]
}
